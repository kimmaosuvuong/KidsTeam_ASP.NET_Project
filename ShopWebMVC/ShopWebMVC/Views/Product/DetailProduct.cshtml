@model Model.Product
@using Model
@{
    ViewBag.Title = "DetailProduct";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<link rel="stylesheet" href=@Url.Content("/Content/css/index.css")>
<link rel="stylesheet" href=@Url.Content("/Content/css/category.css")>
<link rel="stylesheet" href=@Url.Content("/Content/css/product.css")>

<div class="container mt-4 mb-4">
    <div class="row">
        <div class="bn-top col-12 col-xl-12 col-lg-12">
            <div class="">
                <p><img class="img-fluid" src=@Url.Content("/Content/images/bn-top.jpg") alt=""></p>
            </div>
            <div class="breadcrumb breadcrumbCategory">
                <h2>men collection</h2>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active"><a href="#">Fashion</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="sidebar">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-9 col-sm-8 col-md-9">
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-xl-6">
                        <img src=@Url.Content("/Content/images/faded-short-sleeves-tshirt.jpg") class="img-fluid" alt="">
                    </div>
                    <div class="col-lg-6 col-sm-6 col-xl-6">
                        <h1 class="nameProduct">@Model.Name</h1>
                        <div class="productPrices">
                            <div class="currentPrice">
                                <span itemprop="price" content="16.51">@Model.Price VNĐ`</span>
                            </div>
                        </div>
                        <div class="productInformation">
                            <div id="productDescription">
                                <p>
                                  @Model.Detail
                                </p>
                            </div>
                            <div class="productActions">
                                <form action="" method="post">
                                    <input type="hidden" name="token" value="2946b31b5d0548493db70cbe4070457d">
                                    <input type="hidden" name="id_product" value="9" id="product_page_product_id">
                                    <input type="hidden" name="id_customization" value="0" id="product_customization_id">
                                    <div class="productVariants">
                                        <div class="productVariantsItem">
                                            <span class="control-label">Size</span>
                                            <select id="group_1">
                                                <option value="1" title="S" selected="selected">S</option>
                                                <option value="2" title="M">M</option>
                                                <option value="3" title="L">L</option>
                                            </select>
                                        </div>
                                        <div class="productVariantsItem">
                                            <span class="control-label">Color</span>
                                            <ul style="display: flex" class="">
                                                <li class="pull-xs-left input-container">
                                                    <input class="input-color" type="radio"
                                                           value="13" checked="checked">
                                                    <span class="color" style="background-color: #F39C11">
                                                        <span class="sr-only">Orange</span>
                                                    </span>
                                                </li>
                                                <li class="pull-xs-left input-container">
                                                    <input class="input-color" type="radio"
                                                           value="14">
                                                    <span class="color" style="background-color: #5D9CEC">
                                                        <span class="sr-only">Blue</span>
                                                    </span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="productAddToCart">
                                        <div class="productQuantity">
                                            <div class="qty">
                                                <span class="control-label">Quantity</span>
                                                <div class="input-group">
                                                    <input type="number" name="qty" id="quantityWanted" value="1"
                                                           class="input-group form-control"
                                                           min="1" style="display: block;">
                                                </div>
                                            </div>
                                            <div class="add">
                                                <button class="btn btn-primary addToCart" data-button-action="add-to-cart" type="submit">
                                                    <i class="fa fa-shopping-cart shopping-cart"></i>
                                                    Add to cart
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <input class="product-refresh ps-hidden-by-js" name="refresh" type="submit" value="Refresh"
                                           style="display: none;">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 ">
                <div class="headerCol">
                    <h4 class="titleHeaderCol">
                        <span class="titleHeaderColText">Top Rate</span>
                    </h4>
                </div>
                <div class="topRate">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100 img-fluid" src=@Url.Content("/Content/images/printed-summer-dress.jpg") alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 img-fluid" src=@Url.Content("/Content/images/printed-dress.jpg") alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 img-fluid" src=@Url.Content("/Content/images/printed-dress.jpg") alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <div class="button-action">
                            <form action="" method="post">
                                <input type="hidden" name="token" value="2946b31b5d0548493db70cbe4070457d">
                                <input type="hidden" name="id_product" value="11">
                                <button class="add-to-cart" data-button-action="add-to-cart" type="submit">
                                    <i class="fa fa-shopping-cart"></i>
                                </button>
                            </form>
                            <a href="javascript:void(0)" class="quick-view" data-link-action="quickview" title="Quick view">
                                <i class="fa fa-eye"></i>
                            </a>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <a href="" class="titleProduct">Quisque volutpat mattis.</a>
                        <p>
                            <span class="salePrice">$21.35</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-lg-9 col-xl-9 col-md-9" style="margin-bottom: 60px;">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
                           aria-controls="pills-home" aria-selected="true">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"
                           aria-controls="pills-profile" aria-selected="false">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab"
                           aria-controls="pills-contact" aria-selected="false">Contact</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <p class="">
                            Fashion has been creating well-designed collections since 2010. The brand offers feminine
                            designs
                            delivering stylish separates and statement dresses which have since evolved into a full ready-to-wear
                            collection in which every item is a vital part of a woman's wardrobe.

                            The result? Cool, easy, chic looks with youthful elegance and unmistakable signature style. All the
                            beautiful pieces are made in Italy and manufactured with the greatest attention. Now Fashion extends to
                            a
                            range of accessories including shoes, hats, belts and more!
                        </p>
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...</div>
                    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 ">
                <div class="headerCol">
                    <h4 class="titleHeaderCol">
                        <span class="titleHeaderColText">WISHLIST</span>
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                <div class="headerCol">
                    <h4 class="titleHeaderCol">
                        <span class="titleHeaderColText">RELATED PRODUCTS</span>
                    </h4>
                </div>
            </div>
            <div class="row" style="padding:10px 0; margin: 0">
                @{
                    var relativeProduct = (List<Product>)ViewBag.relativeProduct;
                    if (relativeProduct!= null && relativeProduct.Count > 0)
                    {
                        foreach (Product pro in relativeProduct)
                        {
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="itemProduct">
                                    <div class="topItemProduct">
                                        <a href="">
                                            <img src=@Url.Content("/Content/images/faded-short-sleeves-tshirt.jpg") class="img-fluid imgLayerProduct" alt="">
                                        </a>
                                        <div class="button-action">
                                            <form action="" method="post">
                                                <input type="hidden" name="token" value="2946b31b5d0548493db70cbe4070457d">
                                                <input type="hidden" name="id_product" value="11">
                                                <button class="add-to-cart" data-button-action="add-to-cart" type="submit">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </button>
                                            </form>
                                            <a href="javascript:void(0)" class="quick-view" data-link-action="quickview" title="Quick view">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div href="" class="bottomItemProduct text-center mt-4">
                                        <a href="" class="titleProduct">@pro.Name</a>
                                        <p>
                                            <span class="salePrice">@pro.Price VND</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
               
              
            </div>
        </div>
    </div>
    <script src=@Url.Content("/Content/js/jquery-3.3.1.min.js")></script>
    <script src=@Url.Content("/Content/js/popper.js")></script>
    <script src=@Url.Content("/Content/bootstrap-4.0.0/js/bootstrap.min.js")></script>
    <script src=@Url.Content("/Content/js/index.js")></script>
</div>

