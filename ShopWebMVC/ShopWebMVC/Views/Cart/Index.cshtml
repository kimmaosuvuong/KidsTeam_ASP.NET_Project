
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<link rel="stylesheet" href=@Url.Content("/Content/css/category.css")>
<link rel="stylesheet" href=@Url.Content("/Content/css/cart.css")>
<link rel="stylesheet" href=@Url.Content("/Content/css/login.css")>
<div class="container mt-4 mb-4">
    <div class="row">
        <div class="bn-top col-12 col-xl-12 col-lg-12">
            <div class="">
                <p><img class="img-fluid" src=@Url.Content("/Content/images/bn-top.jpg") alt=""></p>
            </div>
            <div class="breadcrumb breadcrumbCategory">
                <h2>men collection</h2>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active"><a href="#">Fashion</a></li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-xl-12 col-sm-12">
            <div class="card cart-container">
                <div class="card-block">
                    <h1 class="h1 text-uppercase">Shopping Cart</h1>
                </div>
                <hr>
                <div class="cart-overview js-cart">
                    <ul class="cart-items">
                        <li class="cart-item">

                            <div class="product-line-grid">
                                <!--  product left content: image-->
                                <div class="product-line-grid-left col-md-3 col-xs-4">
                                    <span class="product-image media-middle">
                                        <img class="img-fluid" src=@Url.Content("/Content/images/faded-short-cart.jpg") alt="Cras ornare tristique elit.">
                                    </span>
                                </div>

                                <!--  product left body: description -->
                                <div class="product-line-grid-body col-md-4 col-xs-8">
                                    <div class="product-line-info">
                                        <a class="label">Cras ornare tristique elit.</a>
                                    </div>

                                    <div class="product-line-info">
                                        <span class="value">$16.51</span>
                                    </div>

                                    <br>
                                    <div class="product-line-info">
                                        <span class="label">Size:</span>
                                        <span class="value">S</span>
                                    </div>
                                    <div class="product-line-info">
                                        <span class="label">Color:</span>
                                        <span class="value">Orange</span>
                                    </div>

                                </div>

                                <!--  product left body: description -->
                                <div class="product-line-grid-right product-line-actions col-md-5 col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-4 hidden-md-up"></div>
                                        <div class="col-md-10 col-xs-6">
                                            <div class="row">
                                                <div class="col-md-6 col-xs-6 qty">
                                                    <div class="input-group bootstrap-touchspin">
                                                        <input class="js-cart-line-product-quantity form-control"
                                                               style="display: block;">
                                                        <span class="input-group-btn-vertical">
                                                            <button class="btn btn-touchspin js-touchspin js-increase-product-quantity bootstrap-touchspin-up"
                                                                    type="button">
                                                                <i class="fa fa-angle-up"></i>
                                                            </button>
                                                            <button class="btn btn-touchspin js-touchspin js-decrease-product-quantity bootstrap-touchspin-down"
                                                                    type="button">
                                                                <i class="fa fa-angle-down"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-xs-2 price">
                                                    <span class="product-price">
                                                        <strong>  $33.02 </strong>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-xs-2 text-xs-right">
                                            <div class="cart-line-product-actions">
                                                <a class="remove-from-cart" rel="nofollow"
                                                   href=""
                                                   data-link-action="delete-from-cart" data-id-product="1" data-id-product-attribute="1"
                                                   data-id-customization="">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="cart-item">

                            <div class="product-line-grid">
                                <!--  product left content: image-->
                                <div class="product-line-grid-left col-md-3 col-xs-4">
                                    <span class="product-image media-middle">
                                        <img class="img-fluid" src=@Url.Content("/Content/images/faded-short-cart.jpg") alt="Cras ornare tristique elit.">
                                    </span>
                                </div>

                                <!--  product left body: description -->
                                <div class="product-line-grid-body col-md-4 col-xs-8">
                                    <div class="product-line-info">
                                        <a class="label">Cras ornare tristique elit.</a>
                                    </div>

                                    <div class="product-line-info">
                                        <span class="value">$16.51</span>
                                    </div>

                                    <br>
                                    <div class="product-line-info">
                                        <span class="label">Size:</span>
                                        <span class="value">S</span>
                                    </div>
                                    <div class="product-line-info">
                                        <span class="label">Color:</span>
                                        <span class="value">Orange</span>
                                    </div>

                                </div>

                                <!--  product left body: description -->
                                <div class="product-line-grid-right product-line-actions col-md-5 col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-4 hidden-md-up"></div>
                                        <div class="col-md-10 col-xs-6">
                                            <div class="row">
                                                <div class="col-md-6 col-xs-6 qty">
                                                    <div class="input-group bootstrap-touchspin">
                                                        <input class="js-cart-line-product-quantity form-control"
                                                               style="display: block;">
                                                        <span class="input-group-btn-vertical">
                                                            <button class="btn btn-touchspin js-touchspin js-increase-product-quantity bootstrap-touchspin-up"
                                                                    type="button">
                                                                <i class="fa fa-angle-up"></i>
                                                            </button>
                                                            <button class="btn btn-touchspin js-touchspin js-decrease-product-quantity bootstrap-touchspin-down"
                                                                    type="button">
                                                                <i class="fa fa-angle-down"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-xs-2 price">
                                                    <span class="product-price">
                                                        <strong>  $33.02 </strong>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-xs-2 text-xs-right">
                                            <div class="cart-line-product-actions">
                                                <a class="remove-from-cart" rel="nofollow"
                                                   href=""
                                                   data-link-action="delete-from-cart" data-id-product="1" data-id-product-attribute="1"
                                                   data-id-customization="">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-xl-12 col-sm-12 mt-4 mb-4">
            <a class="label continue-shopping" href="/">
                <i class="fa fa-angle-left"></i>Continue shopping
            </a>
        </div>
        <div class="cart-grid-right col-xs-12 col-lg-12">

            <div class="card cart-summary">
                <div class="cart-detailed-totals">
                    <div class="card-block">
                        <div class="cart-summary-line" id="cart-subtotal-products">
                            <span class="label js-subtotal">  1 item </span>
                            <span class="value">$16.51</span>
                        </div>
                        <div class="cart-summary-line" id="cart-subtotal-shipping">
                            <span class="label"> Shipping </span>
                            <span class="value">$7.00</span>
                        </div>
                    </div>
                    <hr>
                    <div class="card-block">
                        <div class="cart-summary-line cart-total">
                            <span class="label">Total (tax excl.)</span>
                            <span class="value">$23.51</span>
                        </div>

                        <div class="cart-summary-line">
                            <small class="label">Taxes</small>
                            <small class="value">$0.00</small>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="checkout cart-detailed-actions card-block">
                    <div class="text-center">
                        <a href="" class="btn btn-primary">Checkout</a>

                    </div>
                </div>
            </div>
            <div id="block-reassurance">
                <ul>
                    <li>
                        <div class="block-reassurance-item">
                            <img src=@Url.Content("/Content/images/ic_verified_user_black_36dp_1x.png")
                                 alt="Security policy (edit with Customer reassurance module)">
                            <span class="h6">Security policy (edit with Customer reassurance module)</span>
                        </div>
                    </li>
                    <li>
                        <div class="block-reassurance-item">
                            <img src=@Url.Content("/Content/images/ic_local_shipping_black_36dp_1x.png")
                                 alt="Delivery policy (edit with Customer reassurance module)">
                            <span class="h6">Delivery policy (edit with Customer reassurance module)</span>
                        </div>
                    </li>
                    <li>
                        <div class="block-reassurance-item">
                            <img src=@Url.Content("/Content/images/ic_swap_horiz_black_36dp_1x.png")
                                 alt="Return policy (edit with Customer reassurance module)">
                            <span class="h6">Return policy (edit with Customer reassurance module)</span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<script src=@Url.Content("/Content/js/jquery-3.3.1.min.js")></script>
<script src=@Url.Content("/Content/js/popper.js")></script>
<script src=@Url.Content("/Content/bootstrap-4.0.0/js/bootstrap.min.js")></script>
<script src=@Url.Content("/Content/js/index.js")></script>